<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".queenFragment">
   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">
      <TextView
         android:id="@+id/topLay"
          android:layout_width="wrap_content"
          android:gravity="center"
          android:layout_height="80dp"
          android:background="#FA2471"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
         app:layout_constraintTop_toTopOf="parent"
         android:text="26th MONYWA MODEL UNIVERSE"
          android:textColor="@android:color/holo_green_light"
          android:textSize="30dp"/>
   <androidx.recyclerview.widget.RecyclerView
       android:id="@+id/queenRecycler"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/topLay"
       app:layout_constraintBottom_toTopOf="@id/btnqueen"/>
      <Button
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"
          android:id="@+id/btnqueen"
          android:layout_width="wrap_content"
          android:layout_height="30dp"
          android:text="To King Page"
          android:background="#D81B60"
          android:textColor="@android:color/white"
          android:paddingHorizontal="10dp"
          android:layout_margin="5dp"/>
   </androidx.constraintlayout.widget.ConstraintLayout>



</FrameLayout>